{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@shared/*": ["./src/app/shared/*"],
      "@login/*": ["./src/app/modules/login/*"],
      "@register/*": ["./src/app/modules/register/*"],
      "@principal/*": [".//src/app/modules/principal/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
